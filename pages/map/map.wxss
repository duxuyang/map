/* pages/map/map.wxss */
.main{
 position: relative;
}
#map{
  width:100%;
  height:100%;
  position: absolute;
  top:100rpx;
  left:0;
  right: 0;
  bottom: 0;
}
.top{
  position: absolute;
  top:0;
  left:0;
  right:0;
  height:100rpx;
  background: #fff;
  display: flex;
  align-items :center;
  padding:0 15rpx;
}
.top input{
  height:80rpx;
  border:1px solid #DBDCE0;
  border-radius:5px;
  padding:0 10rpx;
  flex: 1;
}
.maplist{
  position: absolute;
  top:100rpx;
  left:0;
  right: 0;
  bottom: 0;
  background: #E4F1FB;
  overflow-y:auto;
}
.maplist view{
  font-size:34rpx;
  line-height:60rpx;
  border-bottom:1px solid #DBDCE0;
  padding:0 10rpx;
}
